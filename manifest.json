{
    "name": "fScrape",
    "description": "Extension that helps fetching files from webpages.",
    "manifest_version": 2,
    "version": "0.01",

    "permissions": [
        "activeTab"
    ],

    "icons": {
        "48": "icons/icon-48.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_title": "fScrape",
        "default_icon": "icons/icon-32.png",
        "default_popup": "popup/popup.html"
    },

    "applications": {
        "gecko": {
            "id": "fscrape@example.com"
        }
    }
}
